<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!DOCTYPE TEI [

<!ELEMENT TEI (header, facsimile?, testo+) >
<!ELEMENT header (#PCDATA) >
<!ELEMENT facsimile (#PCDATA?) >
<!ELEMENT testo (#PCDATA+) >
 
<!ATTLIST header 
          type CDATA #FIXED "intestazione">
<!ATTLIST header 
          lang NMTOKEN #IMPLIED>
<!ATTLIST facsimile
          source #REQUIRED>
<!ATTLIST facsimile 
          ref IDREFS #IMPLIED>
<!ATTLIST testo 
          id ID #REQUIRED>
<!ATTLIST testo 
          type CDATA #IMPLIED>

]>

<tei>
<header> ciao </header>
<facsimile> ciao ciao </facsimile>
<testo> ciaao </testo>
</tei>